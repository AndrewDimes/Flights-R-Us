<%- include('../partials/header') %>


  <h1>Flight List</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departs</th>
      </tr>
    </thead>
    <tbody>
      <!-- Write the line of EJS to iterate over movies using forEach -->
      <% flights.forEach(function(m){ %>
        <tr>
          <td><%= m.airline %></td>
          <td><%= m.airport %></td>
          <td><%= m.flightNo %></td>
          <td><%= m.departs%></td>
          <td><a href="/flights/<%= m.id %>">DETAILS</a></td>
        </tr>
      <!-- Close the forEach using EJS here -->
      <% }) %>
    </tbody>
  </table>
  <%- include('../partials/footer') %>